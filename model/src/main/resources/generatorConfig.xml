<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration 
	PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
	"http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration>

	<context id="default" targetRuntime="MyBatis3" defaultModelType="flat">
		<jdbcConnection driverClass="org.h2.Driver"
			connectionURL="jdbc:h2:file:./target/h2/gen/db" userId="sa" password="" />

		<javaModelGenerator targetPackage="com.acme.gen.domain" targetProject="MAVEN">
			<property name="enableSubPackages" value="true" />
			<property name="trimStrings" value="true" />
			<property name="rootClass" value="com.acme.model.domain.Base" />
		</javaModelGenerator>

		<sqlMapGenerator targetPackage="com.acme.gen.mapper" targetProject="MAVEN">
			<property name="enableSubPackages" value="true" />
		</sqlMapGenerator>

		<javaClientGenerator targetPackage="com.acme.gen.mapper" targetProject="MAVEN" type="XMLMAPPER">
			<property name="enableSubPackages" value="true" />
		</javaClientGenerator>

		<table tableName="purchase_order" />
		<table tableName="content" >
			<columnOverride column="content" javaType="byte[]" typeHandler="base64" />
			<columnOverride column="is_default" javaType="boolean" typeHandler="yn" />
		</table>
		<table tableName="subject" >
			<columnOverride column="enabled" javaType="boolean" typeHandler="yn" />
		</table>
		<table tableName="role" />
		<table tableName="company" />
		<table tableName="item" />
		<table tableName="item_owner" />
		<table tableName="item_content" >
			<columnOverride column="main" javaType="boolean" typeHandler="yn" />
			<columnOverride column="show" javaType="boolean" typeHandler="yn" />
		</table>
		<table tableName="order_items" />
		<table tableName="category" />
		<table tableName="credential" />
	</context>
</generatorConfiguration>
